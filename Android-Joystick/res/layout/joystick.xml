<!-- VirtickX -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/entire_view"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F8F8FF"
    tools:context=".MainActivity" >
    "
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1" >
    
	<!-- LAYER 1 OF BUTTONS -->
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:weightSum="3" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/joystick_downleft" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/joystick_left"
            android:onClick="up"
            android:background="@android:color/transparent"
             />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/joystick_upleft" />

    </LinearLayout>
	<!-- LAYER 2 OF BUTTONS -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:weightSum="3" >

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="left"
            android:src="@drawable/joystick_down"
 />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3" >

            <Button
                android:id="@+id/button3"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:background="#F8F8FF"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button4"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:background="#F8F8FF"
                android:layout_weight="2" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="rigth"
            android:src="@drawable/joystick_up"
 />

    </LinearLayout>
	<!-- LAYER 3 OF BUTTONS -->
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/linearLayout2"
        android:weightSum="3" >

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/joystick_rightdown" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:onClick="down"
            android:src="@drawable/joystick_right"
    />

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/joystick_upright" />

    </LinearLayout>
	<!-- LAYER 4 OF BUTTONS -->
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/linearLayout3"
        android:background="#F8F8FF"
        android:layout_weight="1"
        android:weightSum="4" >
    </LinearLayout>
	<!-- LAYER 5 OF BUTTONS -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:weightSum="4" >

        <Button
            android:id="@+id/button10"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="80dp"
            android:layout_weight="1.5"
             />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/joystick_square" 
            />

        <Button
            android:id="@+id/button12"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="90dp"
            android:layout_weight="1.5"
             />
        
    </LinearLayout>
	<!-- LAYER 6 OF BUTTONS -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:weightSum="3" >

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/joystick_cross"
             />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3" >

            <Button
                android:id="@+id/button5"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:background="#F8F8FF"
                android:layout_weight="2" />

            <Button
                android:id="@+id/button6"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:background="#F8F8FF"
                android:layout_weight="1" />

        </LinearLayout>
            
            />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/joystick_triangle"
            />

    </LinearLayout>
	<!-- LAYER 7 OF BUTTONS -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:weightSum="3" >

        <Button
            android:id="@+id/button16"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
             />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/joystick_circle"
             />

        <Button
            android:id="@+id/button18"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
             />

    </LinearLayout>
        
    </LinearLayout>


</RelativeLayout>